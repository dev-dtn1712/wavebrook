---
// Contact section - Reusable component with props
export interface Props {
  subtitle: string;
  title: string;
  body: string;
  ctaText: string;
  cta: string;
  ctaLink?: string;
  formCta: string;
  // Optional second CTA
  ctaText2?: string;
  cta2?: string;
  ctaLink2?: string;
}

const {
  subtitle,
  title,
  body,
  ctaText,
  cta,
  ctaLink = '#',
  formCta,
  ctaText2,
  cta2,
  ctaLink2 = '#',
} = Astro.props;
---

<section class='py-12 pb-4 sm:py-16 lg:py-20 mx-3 sm:mx-6 rounded-2xl'>
  <div class='mx-auto px-8 md:px-16 max-w-[90rem]'>
    <div class='grid grid-cols-1 lg:grid-cols-2 sm:gap-12 lg:gap-16 items-start'>
      <!-- Left Side - Contact Info -->
      <div class='h-full flex flex-col justify-between pb-8 lg:pb-20 max-w-[482px] max-h-[668px]'>
        <div class='text-left'>
          <span
            class='text-[#024349] font-semibold text-xs sm:text-sm tracking-wide mb-3 sm:mb-4 block'
          >
            {subtitle.toUpperCase()}
          </span>
          <h2
            class='text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-black mb-4 sm:mb-6 leading-tight'
            set:html={title}
          />
          <span class='text-black text-sm sm:text-base leading-relaxed mb-6 sm:mb-8'>
            {body}
          </span>
        </div>

        <!-- CTA Links -->
        <div class='space-y-6'>
          <!-- First CTA -->
          <div>
            <h3
              class='font-semibold text-lg sm:text-xl md:text-2xl leading-[130%] tracking-normal mb-6'
            >
              {ctaText}
            </h3>
            <a
              href={ctaLink}
              class='inline-flex items-center text-[#024349] text-sm sm:text-base font-medium hover:text-emerald-600 transition-colors border-b-2 border-[#024349] hover:border-emerald-600 break-all'
            >
              <span class='break-words'>{cta}</span>
              <svg
                class='ml-2 w-4 h-4 flex-shrink-0'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M17 8l4 4m0 0l-4 4m4-4H3'></path>
              </svg>
            </a>
          </div>

          <!-- Second CTA (if provided) -->
          {
            ctaText2 && cta2 && (
              <div class='mt-14'>
                <h3 class='font-semibold text-lg sm:text-xl md:text-2xl leading-[130%] tracking-normal mb-6'>
                  {ctaText2}
                </h3>
                <a
                  href={ctaLink2}
                  class='inline-flex items-center text-[#024349] text-sm sm:text-base font-medium hover:text-emerald-600 transition-colors border-b-2 border-[#024349] hover:border-emerald-600 break-all'
                >
                  <span class='break-words'>{cta2}</span>
                  <svg
                    class='ml-2 w-4 h-4 flex-shrink-0'
                    fill='none'
                    stroke='currentColor'
                    viewBox='0 0 24 24'
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      stroke-width='2'
                      d='M17 8l4 4m0 0l-4 4m4-4H3'
                    />
                  </svg>
                </a>
              </div>
            )
          }
        </div>
      </div>

      <!-- Right Side - Contact Form -->
      <div class='rounded-2xl md:p-4 sm:p-6 lg:p-8'>
        <form class='space-y-4 sm:space-y-6'>
          <!-- Name Field -->
          <div>
            <label class='block text-sm font-medium text-gray-700 mb-2'>Name *</label>
            <input
              type='text'
              placeholder='Full name'
              class='w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors'
              required
            />
          </div>

          <!-- Email Field -->
          <div>
            <label class='block text-sm font-medium text-gray-700 mb-2'>Email *</label>
            <input
              type='email'
              placeholder='example@email.com'
              class='w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors'
              required
            />
          </div>

          <!-- Company Field -->
          <div>
            <label class='block text-sm font-medium text-gray-700 mb-2'>Company *</label>
            <input
              type='text'
              placeholder='Company name'
              class='w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors'
              required
            />
          </div>

          <!-- Website Field -->
          <div>
            <label class='block text-sm font-medium text-gray-700 mb-2'
              >Website or social media link</label
            >
            <input
              type='url'
              placeholder='Website or social media link'
              class='w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors'
            />
          </div>

          <!-- Message Field -->
          <div>
            <label class='block text-sm font-medium text-gray-700 mb-2'>Message *</label>
            <textarea
              rows='4'
              placeholder='Enter your message here'
              class='w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors resize-vertical min-h-[100px]'
              required></textarea>
          </div>

          <!-- Submit Button -->
          <button
            type='submit'
            class='w-full sm:w-fit px-8 sm:px-12 py-3 bg-[#024349] text-white text-sm sm:text-base font-semibold rounded-4xl hover:bg-[#059669] transition-all duration-300 transform hover:scale-105 active:scale-95'
          >
            {formCta}
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    background-color: #d6fbfe;
    background-image: url('/assets/decoratives/contact-bg.png');
  }

  input,
  textarea {
    background: white;
  }

  input::placeholder,
  textarea::placeholder {
    color: #0a0a0a80;
  }

  label {
    font-weight: 600;
    font-size: 16px;
    line-height: 150%;
    color: #0a0a0a;
  }

  h2 {
    font-weight: 600;
    font-size: 48px;
    line-height: 130%;
    letter-spacing: -3%;
  }

  /* Responsive label sizing */
  @media (max-width: 640px) {
    label {
      font-size: 14px;
    }
  }

  /* Ensure proper touch targets on mobile */
  @media (max-width: 768px) {
    input,
    textarea,
    button {
      min-height: 44px;
    }
  }
</style>
