---
// Footer component for Wavebrook

// Footer columns data
const footerColumns = [
  {
    title: 'PRODUCTS',
    links: [{ text: 'NetSignal SDK', href: '/products' }],
  },
  {
    title: 'DEVELOPERS',
    links: [
      { text: 'Case Studies', href: '/case-studies' },
      { text: 'Support', href: '/support' },
    ],
  },
  {
    title: 'PARTNERS',
    links: [
      { text: 'Become a Partner', href: '/become-a-partner' },
      { text: 'Affiliates', href: '/affiliates' },
    ],
  },
  {
    title: 'COMPANY',
    links: [
      { text: 'About', href: '/about' },
      { text: 'Events', href: '/events' },
      { text: 'Contact', href: '/contact' },
    ],
  },
];

// Bottom links data
const bottomLinks = [
  { text: 'Privacy Policy', href: '#' },
  { text: 'Terms', href: '#' },
];
---

<footer class='px-[0.625rem] md:px-6 relative overflow-hidden mt-4'>
  <div
    class='px-6 md:px-10 pt-12 pb-16 bg-white mb-6 rounded-xl'
    style='box-shadow: 0px 4px 16px 0px #0000000D;'
  >
    <!-- Main Footer Content -->
    <div
      class='max-w-[90rem] px-8 mx-auto flex flex-col md:flex-row md:justify-between md:items-start gap-8 mb-8'
    >
      <!-- Logo -->
      <a href='/' class='flex items-center'>
        <img src='wavebrook.png' alt='Wavebrook Logo' class='w-auto h-auto' />
      </a>

      <!-- Footer Links Grid -->
      <!-- Mobile: 2x2 Grid -->
      <div class='grid grid-cols-2 gap-8 md:hidden'>
        {
          footerColumns.map(column => (
            <div>
              <h4 class='font-semibold text-sm text-[#0A0A0A80] uppercase tracking-normal leading-[1.4] mb-4'>
                {column.title}
              </h4>
              <ul class='space-y-[0.625rem]'>
                {column.links.map(link => (
                  <li>
                    <a
                      href={link.href}
                      class='text-[#0A0A0A] hover:text-[#024349] transition-colors text-base font-semibold leading-normal'
                    >
                      {link.text}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>

      <!-- Desktop: Horizontal Layout -->
      <div class='hidden md:flex md:flex-wrap md:gap-16'>
        {
          footerColumns.map(column => (
            <div>
              <h4 class='font-semibold text-sm text-[#0A0A0A80] uppercase tracking-normal leading-[1.4] mb-4'>
                {column.title}
              </h4>
              <ul class='space-y-[0.625rem]'>
                {column.links.map(link => (
                  <li>
                    <a
                      href={link.href}
                      class='text-[#0A0A0A] hover:text-[#024349] transition-colors text-base font-semibold leading-normal'
                    >
                      {link.text}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Bottom Section -->
    <div
      class='max-w-[90rem] m-auto flex md:justify-between md:items-center pt-12 border-t border-black/10 gap-4 px-8'
    >
      <div class='flex flex-col w-1/2 md:w-full space-y-2 md:flex-row md:space-y-0 md:space-x-6'>
        {
          bottomLinks.map(link => (
            <a
              href={link.href}
              class='text-[#0A0A0A] font-semibold leading-normal underline hover:text-[#024349] transition-colors text-sm'
            >
              {link.text}
            </a>
          ))
        }
      </div>
      <div class='text-black/70 font-medium text-sm w-1/2 md:w-full text-right'>
        Â© 2025 Wavebrook Analytics
      </div>
    </div>
  </div>
  <div class='absolute bottom-0 left-0 w-full h-full pointer-events-none'>
    <svg
      width='943'
      height='360'
      viewBox='0 0 943 360'
      fill='none'
      xmlns='http://www.w3.org/2000/svg'
      class='h-full'
    >
      <g filter='url(#filter0_f_500_55711)'>
        <path
          d='M740.266 380.404L742.326 426.526L737.8 472.472L726.782 517.306L709.496 560.115L686.293 600.029L657.646 636.234L624.138 667.993L586.451 694.661L545.352 715.694L501.679 730.664L456.32 739.266L410.198 741.326L364.252 736.8L319.418 725.782L276.609 708.496L236.695 685.293L200.49 656.646L168.731 623.138L142.063 585.451L121.03 544.352L106.06 500.679L97.4576 455.32L95.3983 409.198L99.9238 363.252L110.942 318.418L128.228 275.609L151.431 235.695L180.078 199.49L213.586 167.731L251.273 141.063L292.372 120.03L336.045 105.06L381.404 96.4576L427.526 94.3983L473.472 98.9237L518.306 109.942L561.115 127.228L601.029 150.431L637.234 179.078L668.994 212.586L695.661 250.273L716.694 291.372L731.664 335.045L740.266 380.404Z'
