    <!-- Events Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      
      {events.map(event => (
<div class="group cursor-pointer h-full">
  <div class="event-card rounded-2xl overflow-hidden shadow-lg border border-white transition-all duration-500 p-2 bg-white h-full">
