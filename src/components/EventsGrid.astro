    <div class="px-3 mb-4">
      <p class="text-[#024349] font-semibold text-xs sm:text-sm mb-1 sm:mb-2">{event.date}</p>

      <h4 class="font-semibold text-lg sm:text-xl md:text-2xl leading-[130%] tracking-[-0.01em] text-black mb-2 sm:mb-3">
        {event.title}
      </h4>

      <p class="text-[#000000CC] font-normal text-sm sm:text-base leading-[150%] tracking-[-0.02em] mb-3 sm:mb-4">
        {event.description}
      </p>

      <!-- Location -->
      <div class="flex items-center gap-2 font-bold text-sm leading-[14px] tracking-normal uppercase text-[#024349]">
        <img src="/assets/icons/location.svg" alt="location icon">
